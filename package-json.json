{
  "name": "verix-token",
  "version": "1.0.0",
  "description": "Verix Token System with Gas Optimization",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "coverage": "hardhat coverage",
    "deploy:mumbai": "hardhat run scripts/deploy/complete_deployment.ts --network mumbai",
    "deploy:polygon": "hardhat run scripts/deploy/complete_deployment.ts --network polygon",
    "verify": "hardhat verify-all",
    "lint": "solhint 'contracts/**/*.sol' && eslint '**/*.{js,ts}'",
    "prettier": "prettier --write 'contracts/**/*.sol' '**/*.{js,ts}'",
    "frontend:dev": "cd frontend && npm run dev",
    "frontend:build": "cd frontend && npm run build"
  },
  "keywords": [
    "ethereum",
    "polygon",
    "solidity",
    "web3"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@nomiclabs/hardhat-waffle": "^2.0.6",
    "@openzeppelin/contracts": "^4.9.3",
    "@openzeppelin/hardhat-upgrades": "^1.28.0",
    "@typechain/ethers-v5": "^10.2.1",
    "@typechain/hardhat": "^6.1.6",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.5.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "chai": "^4.3.7",
    "dotenv": "^16.3.1",
    "eslint": "^8.47.0",
    "ethereum-waffle": "^4.0.10",
    "ethers": "^5.7.2",
    "hardhat": "^2.17.1",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^1.0.9",
    "prettier": "^3.0.2",
    "prettier-plugin-solidity": "^1.1.3",
    "solhint": "^3.6.1",
    "solidity-coverage": "^0.8.4",
    "ts-node": "^10.9.1",
    "typechain": "^8.3.1",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@chainlink/contracts": "^0.6.1"
  }
}
